<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
    <class name="ar.com.scriptorum.beans.Viaje" table="viajes">
        <id name="id" column="id" type="long">
        	<generator class="native"/>
        </id>
		<many-to-one name="group" class="ar.com.scriptorum.beans.Group" column="group_id" lazy="false" />
		<many-to-one name="itinerario" class="ar.com.scriptorum.beans.Itinerario" column="itinerario_id" lazy="false" />
		<many-to-one name="vehiculo" class="ar.com.scriptorum.beans.Vehiculo" column="vehiculo_id" lazy="false" />
		<property name="inicio" column="inicio" type="java.util.Date"/>
		<property name="fin" column="fin" type="java.util.Date"/>
		<property name="cerrado" column="cerrado" type="boolean"/>
		
    </class>
</hibernate-mapping>