<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
          "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
		<property name="configLocation" value="classpath:hibernate.cfg.xml" />
	</bean>
	
	<bean id="viajeDao" class="ar.com.scriptorum.dao.ViajeDaoImpl">
	    <property name="sessionFactory" ref="sessionFactory"/>
	</bean>
	<bean id="groupDao" class="ar.com.scriptorum.dao.GroupDaoImpl">
	    <property name="sessionFactory" ref="sessionFactory"/>
	</bean>
	<bean id="carpoolerDao" class="ar.com.scriptorum.dao.CarpoolerDaoImpl">
	    <property name="sessionFactory" ref="sessionFactory"/>
	</bean>
	<bean id="itinerarioDao" class="ar.com.scriptorum.dao.ItinerarioDaoImpl">
	    <property name="sessionFactory" ref="sessionFactory"/>
	</bean>
	<bean id="vehiculoDao" class="ar.com.scriptorum.dao.VehiculoDaoImpl">
	    <property name="sessionFactory" ref="sessionFactory"/>
	</bean>
</beans>